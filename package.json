{
  "name": "delta-launcher",
  "version": "0.0.26",
  "description": "Launcher that launches Minecraft for Project Delta and also has a nice user interface and settings.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always"
  },
  "author": "Albee",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.4.16",
    "array-unique": "^0.3.2",
    "auto-updater": "^1.0.2",
    "discord-rich-presence": "0.0.8",
    "discord-rpc": "^3.1.1",
    "electron-dl": "^3.0.1",
    "electron-log": "^4.2.2",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^4.3.1",
    "fs-extra": "^9.0.0",
    "get-folder-size": "^2.0.1",
    "jquery": "^3.5.0",
    "jquery-mousewheel": "^3.1.13",
    "keytar": "^6.0.1",
    "malihu-custom-scrollbar-plugin": "^3.1.5",
    "rimraf": "^3.0.2",
    "update-electron-app": "^1.5.0"
  },
  "devDependencies": {
    "electron": "^8.5.1",
    "electron-builder": "^22.7.0",
    "electron-packager": "^15.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SuperMegaKeks/Delta-Launcher.git"
  },
  "build": {
    "appId": "com.albee.app",
    "productName": "Delta Launcher",
    "target": "nsis",
    "directories": {
      "output": "build"
    },
    "win": {
      "publish": {
        "provider": "github",
        "token": "984fbec6bcef8268a884a63a05003fd97ec2f352"
      }
    },
    "publish": [
      {
        "provider": "github",
        "owner": "SuperMegaKeks",
        "repo": "Delta-Launcher"
      }
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
